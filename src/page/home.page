    .img-list-box(@for="item in imgList", @click="switchBlinker")
      .blinker
        .text {{item.text}}
      img.img-list-item(src="{{item.src}}", ondragstart="return false;")
      // 图片右下角小图标
      .switch-icon
      // 左下角角标
      .corner-marker
        span.left 1
        span.division /
        span.total 10
    .clear
  temple(name="plane", src="./src/page/plane.page")
