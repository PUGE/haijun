</template>

<script>
  module.exports = {
    data: {
      imgList: [
        {src:"@&1.jpg&", text:"1949年4月23日 人民海军成立"},
        {src:"@&2.jpg&", text:"1970年12月26日 第一艘国产核潜艇成功下水"},
        {src:"@&3.jpg&", text:"1985年11月16日 海军军舰首次出访"},
        {src:"@&4.jpg&", text:"1988年9月27日 核潜艇水下发射运载火箭成功"},
        {src:"@&5.jpg&", text:"2002年9月23日 海军首次环球航行圆满结束"},
        {src:"@&6.jpg&", text:"2008年12月26日 海军首次亚丁湾护航"},
        {src:"@&7.jpg&", text:"2009年4月23日 中国首次举行多国海军活动"},
        {src:"@&8.png&", text:"2012年9月25日 中国首艘航空母舰辽宁舰入列"},
        {src:"@&9.png&", text:"2012年11月23日 舰载机首次着舰"},
        {src:"@&10.jpg&", text:"2015年3月29日 也门撤侨"},
        {src:"@&11.png&", text:"2017年4月26日 首艘国产航母下水"},
        {src:"@&12.png&", text:"2018年4月12日 中央军委在南海海域举行海上阅兵"},
      ]
    },
    created: function (params) {
      // var vConsole = new VConsole();
      
      // 填充角标
      const markerList = $('.corner-marker')
      for (let index = 0; index < markerList.length; index++) {
        const dom = markerList[index]
        dom.children[0].innerText = index + 1
        dom.children[2].innerText = markerList.length
      }
      // 开始加载图片
      let newImgList = this.data.imgList.map((item) => {
        return item.src
      })
      loadImages({
        loadArr: newImgList,
        complete: () => {
          // 图片加载完毕后计算图片所占用位置
          setTimeout(() => {
            console.log('内容图已经加载完毕!')
            let imgWidth = 0
            for (let item of $('.img-list-item')) {
              // console.log(item.width)
              imgWidth += item.width + 10
            }
            $('#imgList').style.width = imgWidth + 2 + 'px'
            $('#o-home').style.width = imgWidth + $tool.getScreenInfo().clientWidth + 2 +'px'
          }, 0)
        }
      })
    },
    switchBlinker: function () {
      const classList = this.$el.getElementsByClassName('blinker')[0].classList
      if (classList.contains('show')) {
        classList.remove('show')
      } else {
        classList.add('show')
      }
    }
  }
</script>


